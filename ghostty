# -*- mode: conf-unix -*-

# Set font and theme
font-family = Aporetic Sans Mono
font-size = 15
theme = light:ef-day,dark:ef-night

# Disable all ligatures
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# Use default (block) cursor
shell-integration-features = no-cursor

# Use CMD as ESC for common readline shortcuts
keybind = cmd+b=esc:b
keybind = cmd+d=esc:d
keybind = cmd+f=esc:f
keybind = cmd+x=esc:x

# Right OPT acts as ALT
macos-option-as-alt = right

# Copy selection to clipboard
copy-on-select = clipboard

# Set shell
command = env -P /opt/homebrew/bin:/usr/local/bin fish -l

# Local configuration (optional)
# Path is relative to the main configuration file and leading '?' makes it
# optional
config-file = ?config-local
